@page
@model Torneo.App.Frontend.Pages.DTs.IndexModel
@{
}
<h1>Listado De Directores Técnicos</h1>
<table class="table table-dark table-hover">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Nombre</th>
            <th scope="col">Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var dts in Model.dts)
        {
            <tr>
                <th scope="row">@dts.Id</th>
                <td>@dts.Nombre</td>
                <td>
                    <a class="btn btn-outline-light" asp-page="./Details" asp-route-id="@dts.Id">
                        Detalle
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

